---
import Layout from "../layouts/Layout.astro";
import { t, type Lang } from "../lib/i18n";

// Use same lang detection logic or just default for landing page
const lang = (Astro.url.searchParams.get("lang") as Lang) || "en";
---

<Layout
    title="Remark üèõÔ∏è ‚Äî The Perpetual Message Bridge"
    description="Craft permanent, 3D digital artifacts for the people you love. Secure, decentralized, and built to last forever."
>
    <!-- Hero Section -->
    <section
        class="relative min-h-screen flex items-center justify-center overflow-hidden"
    >
        <div class="absolute inset-0 z-0">
            <!-- Gold/Obsidian Gradient -->
            <div
                class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_#2A1A00_0%,_#050505_70%)] opacity-80"
            >
            </div>
        </div>

        <div class="relative z-10 text-center px-6 max-w-5xl mx-auto">
            <div
                class="inline-flex items-center gap-3 px-4 py-1.5 rounded-full border border-[#D4AF37]/30 bg-[#D4AF37]/5 mb-12 animate-fade-in-up backdrop-blur-md"
            >
                <span
                    class="w-2 h-2 rounded-full bg-[#D4AF37] animate-pulse shadow-[0_0_10px_#D4AF37]"
                ></span>
                <span
                    class="text-xs font-serif italic text-[#E5C56C] tracking-widest"
                    >Est. 2024 ‚Äî The Stone Age</span
                >
            </div>

            <h1
                class="text-7xl md:text-9xl font-serif font-black tracking-tight mb-8 leading-[0.9] text-[#FDFBF7] animate-fade-in-up delay-100 drop-shadow-[0_4px_10px_rgba(0,0,0,0.5)]"
            >
                {t("hero.title", lang)}
            </h1>

            <p
                class="text-xl md:text-3xl text-[#FDFBF7]/60 max-w-3xl mx-auto leading-relaxed mb-16 font-serif italic animate-fade-in-up delay-200"
            >
                {t("hero.subtitle", lang)}
                <br />
                {t("hero.description", lang)}
            </p>

            <div
                class="flex flex-col md:flex-row items-center justify-center gap-6 animate-fade-in-up delay-300"
            >
                <a
                    href={`/create?lang=${lang}`}
                    class="group relative px-8 py-4 bg-[#D4AF37] text-[#050505] font-serif font-bold text-lg rounded-full overflow-hidden transition-all hover:scale-105 hover:shadow-[0_0_30px_rgba(212,175,55,0.4)]"
                >
                    <span class="relative z-10 flex items-center gap-2">
                        {t("hero.cta", lang)}
                        <span>‚ú®</span>
                    </span>
                </a>
                <a
                    href="/docs/roadmap"
                    class="px-10 py-5 bg-[#1A1A1A]/50 hover:bg-[#1A1A1A]/80 text-[#D4AF37] border border-[#D4AF37]/30 rounded-lg font-medium transition-all hover:border-[#D4AF37] hover:scale-105 active:scale-95 backdrop-blur-sm"
                >
                    View The Archives
                </a>
            </div>
        </div>

        <!-- Floating ambient elements -->
        <div
            class="absolute bottom-10 left-0 right-0 text-center pb-8 animate-float opacity-30"
        >
            <div
                class="w-px h-16 bg-gradient-to-b from-transparent via-[#D4AF37] to-transparent mx-auto mb-4"
            >
            </div>
            <span
                class="text-xs font-mono uppercase tracking-[0.3em] text-[#D4AF37]"
                >Scroll to Explore</span
            >
        </div>
    </section>

    <!-- Collections Grid -->
    <section class="py-32 px-6 max-w-7xl mx-auto border-t border-[#D4AF37]/10">
        <div class="text-center mb-20">
            <h2 class="text-4xl font-serif text-[#FDFBF7] mb-4">
                The Collections
            </h2>
            <p
                class="text-[#D4AF37] font-mono text-sm tracking-widest uppercase"
            >
                Curated by Artisans
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Card 1 -->
            <div
                class="group relative p-10 rounded-xl border border-[#D4AF37]/20 bg-[#1A1A1A]/40 hover:bg-[#1A1A1A]/60 transition-all duration-500 overflow-hidden backdrop-blur-md"
            >
                <div
                    class="absolute inset-0 bg-gradient-to-br from-[#990000]/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700"
                >
                </div>
                <div class="relative z-10">
                    <span
                        class="text-5xl mb-6 block filter drop-shadow-[0_0_10px_rgba(212,175,55,0.2)]"
                        >üåπ</span
                    >
                    <h3
                        class="text-2xl font-serif font-bold text-[#FDFBF7] mb-3 group-hover:text-[#D4AF37] transition-colors"
                    >
                        Crimson Vellum
                    </h3>
                    <p class="text-[#FDFBF7]/50 font-serif italic">
                        For expressions of deep affection and timeless romance.
                    </p>
                </div>
            </div>

            <!-- Card 2 -->
            <div
                class="group relative p-10 rounded-xl border border-[#D4AF37]/20 bg-[#1A1A1A]/40 hover:bg-[#1A1A1A]/60 transition-all duration-500 overflow-hidden backdrop-blur-md"
            >
                <div
                    class="absolute inset-0 bg-gradient-to-br from-[#D4AF37]/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700"
                >
                </div>
                <div class="relative z-10">
                    <span
                        class="text-5xl mb-6 block filter drop-shadow-[0_0_10px_rgba(212,175,55,0.2)]"
                        >‚è≥</span
                    >
                    <h3
                        class="text-2xl font-serif font-bold text-[#FDFBF7] mb-3 group-hover:text-[#D4AF37] transition-colors"
                    >
                        The Vault
                    </h3>
                    <p class="text-[#FDFBF7]/50 font-serif italic">
                        Cryptographically sealed messages for your future self.
                    </p>
                </div>
            </div>

            <!-- Card 3 -->
            <div
                class="group relative p-10 rounded-xl border border-[#D4AF37]/20 bg-[#1A1A1A]/40 hover:bg-[#1A1A1A]/60 transition-all duration-500 overflow-hidden backdrop-blur-md"
            >
                <div
                    class="absolute inset-0 bg-gradient-to-br from-[#FDFBF7]/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700"
                >
                </div>
                <div class="relative z-10">
                    <span
                        class="text-5xl mb-6 block filter drop-shadow-[0_0_10px_rgba(212,175,55,0.2)]"
                        >üèõÔ∏è</span
                    >
                    <h3
                        class="text-2xl font-serif font-bold text-[#FDFBF7] mb-3 group-hover:text-[#D4AF37] transition-colors"
                    >
                        Public Ledger
                    </h3>
                    <p class="text-[#FDFBF7]/50 font-serif italic">
                        Permanent testimonials etched into the digital stone.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Feature: Documentation -->
    <section class="py-24 border-t border-[#D4AF37]/10 bg-[#0A0500]/40">
        <div class="max-w-4xl mx-auto px-6 text-center">
            <h2 class="text-3xl font-serif italic text-[#FDFBF7] mb-12">
                For the Architects of Memory
            </h2>
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
                <a
                    href="/docs/architecture"
                    class="p-8 border border-[#D4AF37]/20 rounded-xl hover:border-[#D4AF37] transition-all bg-[#1A1A1A]/40 group"
                >
                    <span
                        class="block text-3xl mb-4 group-hover:scale-110 transition-transform"
                        >‚öôÔ∏è</span
                    >
                    <strong
                        class="block text-[#FDFBF7] mb-2 font-serif group-hover:text-[#D4AF37]"
                        >Foundation</strong
                    >
                    <span
                        class="text-xs text-[#FDFBF7]/40 font-mono uppercase tracking-widest"
                        >Technology Stack</span
                    >
                </a>
                <a
                    href="/docs/business"
                    class="p-8 border border-[#D4AF37]/20 rounded-xl hover:border-[#D4AF37] transition-all bg-[#1A1A1A]/40 group"
                >
                    <span
                        class="block text-3xl mb-4 group-hover:scale-110 transition-transform"
                        >üíé</span
                    >
                    <strong
                        class="block text-[#FDFBF7] mb-2 font-serif group-hover:text-[#D4AF37]"
                        >Strategy</strong
                    >
                    <span
                        class="text-xs text-[#FDFBF7]/40 font-mono uppercase tracking-widest"
                        >Heirloom Stones</span
                    >
                </a>
                <a
                    href="/docs/artists"
                    class="p-8 border border-[#D4AF37]/20 rounded-xl hover:border-[#D4AF37] transition-all bg-[#1A1A1A]/40 group"
                >
                    <span
                        class="block text-3xl mb-4 group-hover:scale-110 transition-transform"
                        >üé®</span
                    >
                    <strong
                        class="block text-[#FDFBF7] mb-2 font-serif group-hover:text-[#D4AF37]"
                        >Artisans</strong
                    >
                    <span
                        class="text-xs text-[#FDFBF7]/40 font-mono uppercase tracking-widest"
                        >Contribution Guide</span
                    >
                </a>
            </div>
        </div>
    </section>

    <footer class="py-16 border-t border-[#D4AF37]/10 text-center bg-[#050505]">
        <div class="mb-8">
            <span class="text-2xl font-serif font-bold text-[#D4AF37]"
                >Heirloom</span
            >
        </div>
        <p
            class="text-[#FDFBF7]/30 text-xs font-mono uppercase tracking-[0.2em]"
        >
            Est. 2024 ‚Ä¢ Built for Eternity ‚Ä¢ <a
                href="https://github.com/arepodesir/open-valentines"
                class="hover:text-[#D4AF37] transition-colors">GitHub</a
            >
        </p>
    </footer>
</Layout>

<style>
    .animate-fade-in-up {
        animation: fadeInUp 1.2s cubic-bezier(0.16, 1, 0.3, 1) forwards;
        opacity: 0;
        transform: translateY(30px);
    }

    .delay-100 {
        animation-delay: 0.2s;
    }
    .delay-200 {
        animation-delay: 0.4s;
    }
    .delay-300 {
        animation-delay: 0.6s;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
