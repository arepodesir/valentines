---
import Layout from "../layouts/Layout.astro";
import App from "../components/App.tsx";
import { getAllLetters, type LetterMeta } from "../lib/letters";

export function getStaticPaths() {
    const letters = getAllLetters();
    return letters.map((letter) => ({
        params: { slug: letter.slug },
        props: { letter },
    }));
}

interface Props {
    letter: LetterMeta;
}

const { letter } = Astro.props;
const pageTitle = `ðŸ’Œ From ${letter.from} to ${letter.to}`;
const pageDescription = `${letter.from} sent ${letter.to} a love letter â€” open the music box and let the magic play!`;
const canonicalUrl = new URL(
    `/${letter.slug}`,
    Astro.site || "https://loveletters.dev",
).href;
---

<Layout
    title={pageTitle}
    description={pageDescription}
    ogTitle={pageTitle}
    ogDescription={pageDescription}
    ogUrl={canonicalUrl}
    slug={letter.slug}
    letterMode={true}
    showNav={true}
    navBackLabel={`â† Back`}
>
    <App client:only="solid-js" confPath={letter.confPath} slug={letter.slug} />
</Layout>
